@model OrdersApp.Web.Models.Orders.UpdateOrderViewModel

@{
    ViewData["Title"] = "Update";
}

<h2>Редактировать заказ</h2>


@if (Model is not null)
{
    <form asp-controller="Order" asp-action="Edit" Method="post" asp-antiforgery="true">
        <input type="hidden" asp-for="@Model.Id" />
        <br />
        <div class="col-6">
            <label asp-for="@Model.Number" class="form-label"></label>
            <input asp-for="@Model.Number" type="text" class="form-control" id="inputNumber" aria-describedby="NumberHelp"
               placeholder=@Model.Number>
            <span asp-validation-for="@Model.Number"></span>
            <div id="NumberHelp" class="form-text">Введите наименование заказа</div>
        </div>
        <br />
        <div class="col-6">
            <label asp-for="@Model.ProviderId" class="form-label"></label>
            <select class="form-control" multiple asp-items="@(new SelectList(ViewBag.Providers, "Id", "Name"))"
                asp-for="@Model.ProviderId" id="inputProvider" aria-describedby="ProviderHelp">
            </select>
            <span asp-validation-for="@Model.ProviderId"></span>
            <div id="ProviderHelp" class="form-text">Выберите поставщика</div>
        </div>
        <br />
        <div class="col-6">
            <label asp-for="@Model.Date" class="form-label"></label>
            <input asp-for="@Model.Date" type="date" class="form-control" id="inputDate" aria-describedby="DateHelp"
               placeholder=@Model.Date />
            <span asp-validation-for="@Model.Date"></span>
            <div id="DateHelp" class="form-text">Выберите дату создания заказа</div>
        </div>
        <br />
        <div class="col-6">
            <button type="submit" class="btn btn-primary">Заменить</button>
        </div>
    </form>
}
else
{
    <h3>Not found</h3>
}
