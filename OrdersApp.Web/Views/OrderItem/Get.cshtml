@model OrdersApp.Web.Models.OrderItems.GetOrderItemsByUserConfigViewModel

@{
    ViewData["Title"] = "Get";
}



<div class="text-center">
    @if (ViewBag.Order.Id > 0)
    {
        <h1 class="display-5">Детали заказа № @ViewBag.Order.Id</h1>
        <br />

        <table class="table">
            <tbody>
                <tr>
                    <td></td>
                    <td>Наименование</td>
                    <td>@ViewBag.Order.Number</td>
                </tr>
                <tr>
                    <td></td>
                    <td>Поставщик</td>
                    <td>@ViewBag.Order.Provider.Name</td>
                </tr>
                <tr>
                    <td></td>
                    <td>Дата создания</td>
                    <td>@ViewBag.Order.Date</td>
                </tr>
        </table>

        <div class="row">
            <div class="col-2">
                <form asp-controller="Order" asp-action="Update"
                  asp-route-id="@ViewBag.Order.Id" method="post">
                    <button type="submit" class="btn btn-md btn-primary">Изменить заказ</button>
                </form>
            </div>
            <div class="col-2">
                <form asp-controller="Order" asp-action="Delete"
                  asp-route-id="@ViewBag.Order.Id" method="post">
                    <button type="submit" class="btn btn-md btn-danger">Удалить заказ</button>
                </form>
            </div>
            <br />
            <br />
        </div>



        <div class="row">
            <br />
            <br />
            @if (ViewBag.Order.OrderItems.Count != 0)
            {
                <h1>В состав заказа входит: </h1>
                <form asp-controller="Order" asp-action="Get" Method="post" asp-antiforgery="true">
                    <div class="row">
                        <div class="col-3">
                            <label asp-for="@Model.Name" class="form-label"></label>
                            <select class="form-control" multiple asp-items="@(new SelectList(ViewBag.OrderItemNames))"
                            asp-for="@Model.Name" id="inputName" aria-describedby="NameHelp">
                            </select>
                            <span asp-validation-for="@Model.Name"></span>
                            <div id="NameHelp" class="form-text">Сортировать по имени</div>
                        </div>

                        <div class="col-3">
                            <label asp-for="@Model.Unit" class="form-label"></label>
                            <select class="form-control" multiple asp-items="@(new SelectList(ViewBag.OrderItemUnits))"
                            asp-for="@Model.Unit" id="inputUnit" aria-describedby="UnitHelp">
                            </select>
                            <span asp-validation-for="@Model.Unit"></span>
                            <div id="NameUnit" class="form-text">Сортировать по единице измерения</div>
                        </div>

                        <div class="col-3">
                            <button type="submit" class="btn btn-primary">Фильтровать</button>
                        </div>
                    </div>
                </form>
                <br />
                <br />
                <table class="table table-bordered countLines">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Название</th>
                            <th scope="col">Количество</th>
                            <th scope="col">Единица измерения</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var orderItem in ViewBag.Orders.OrderItems)
                        {
                            <tr>
                                <td></td>
                                <td><a asp-controller="OrderItem" asp-action="Get" asp-route-id="@orderItem.Id">@orderItem.Name</a></td>
                                <td>@orderItem.Quantity</td>
                                <td>@orderItem.Unit</td>
                                <td>
                                    <form asp-controller="OrderItem" asp-action="Delete" asp-route-id="@orderItem.Id" method="post">
                                        <a class="btn btn-sm btn-primary" asp-controller="OrderItem" asp-action="Edit" asp-route-id="@orderItem.Id">Изменить</a>
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Удалить
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            }
            else
            {
                <h3>Компоненты заказа не найдены</h3>
            }
        </div>
        <form asp-controller="OrderItem" asp-action="Add" asp-route-id="@ViewBag.Order.Id" Method="post" asp-antiforgery="true">
            <div class="col">
                <button type="submit" class="btn-lg ml-auto btn-primary">Добавить новый компонент</button>
            </div>
        </form>

    }
    else
    {
        <h3>Not found</h3>
    }
</div>

<br />
<br />


<script>
    $('.table tbody tr').each(function (i) {
        var number = i + 1;
        $(this).find('td:first').text(number + ".");
    });
</script>
