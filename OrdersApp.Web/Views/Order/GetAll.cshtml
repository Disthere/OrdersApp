
@{
    ViewData["Title"] = "GetAll";
}

<h1>Orders</h1>

<select class="form-select" size="5" multiple aria-label="multiple select example">
    <option selected>Все поставщики</option>

    @foreach (var provider in ViewBag.Providers)
    {
       <option value="1">@provider.Name</option>
        
    }
        
</select>

<form>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword" placeholder="Password">
        </div>
    </div>
</form>

<div class="text-center">
    <h1 class="display-5">Все заказы</h1>

    <select class="form-select" size="5" multiple aria-label="multiple select example">
        <option selected>Поставщик</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
    </select>

    <select class="form-select" size="5" multiple aria-label="multiple select example">
        <option selected>Номер заказа</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
    </select>

    <label>From</label>
    <input type="date" />


    <label>To</label>
    <input type="date" />


    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Имя</th>
                <th scope="col">Фамилия</th>
                <th scope="col">Username</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td><a href="https://www.google.ru/">ccslurf</a></td>
                <td>Otto</td>
                <td>mdo</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td><a href="https://www.google.ru/">ccslurf</a></td>
                <td>Otto</td>
                <td>TwBootstrap</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>fat</td>
            </tr>
        </tbody>
    </table>
</div>
