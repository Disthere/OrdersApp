@model OrdersApp.Web.Models.Orders.CreateOrderViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Добавить заказ</h2>



<form asp-controller="Order" asp-action="Create" Method="post" asp-antiforgery="true">

    <br />
    <div class="col-6">
        <label asp-for="@Model.CreateOrderDto.Number" class="form-label"></label>
        <input asp-for="@Model.CreateOrderDto.Number" type="text" class="form-control" id="inputNumber" aria-describedby="NumberHelp">
        <span asp-validation-for="@Model.CreateOrderDto.Number"></span>
        <div id="NumberHelp" class="form-text">Введите наименование заказа</div>
    </div>
    <br />
    <div class="col-6">
        <label asp-for="@Model.CreateOrderDto.ProviderId" class="form-label"></label>
        <select class="form-control" multiple asp-items="@(new SelectList(Model.Providers, "Id", "Name"))"
                asp-for="@Model.CreateOrderDto.ProviderId" id="inputProvider" aria-describedby="ProviderHelp">
        </select>
        <span asp-validation-for="@Model.Providers"></span>
        <div id="ProviderHelp" class="form-text">Выберите поставщика</div>
    </div>
    <br />
    <div class="col-6">
        <label asp-for="@Model.CreateOrderDto.Date" class="form-label"></label>
        <input asp-for="@Model.CreateOrderDto.Date" type="date" class="form-control" id="inputDate" aria-describedby="DateHelp" />
        <span asp-validation-for="@Model.CreateOrderDto.Date"></span>
        <div id="DateHelp" class="form-text">Выберите дату создания заказа</div>
    </div>
    <br />
    <div class="col-6">
        <button type="submit" class="btn btn-primary">Создать</button>
    </div>
</form>
